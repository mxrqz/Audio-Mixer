{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "audiomixer",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "globalShortcut": {
        "all": true
      },
      "notification": {
        "all": true
      },
      "window": {
        "center": true,
        "hide": true,
        "setFocus": true,
        "setPosition": true,
        "setSkipTaskbar": true,
        "show": true,
        "setSize": true,
        "setAlwaysOnTop": true
      },
      "fs": {
        "all": true,
        "exists": true,
        "readFile": true,
        "scope": [
          "$APPLOCALDATA/*"
        ],
        "writeFile": true
      },
      "path": {
        "all": true
      }
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "windows": [
      {
        "title": "AudioMixer",
        "label": "main",
        "width": 500,
        "height": 250,
        "visible": false,
        "closable": false,
        "transparent": true,
        "decorations": false,
        "hiddenTitle": true,
        "center": true,
        "focus": true,
        "theme": "Dark",
        "alwaysOnTop": true,
        "resizable": false
      },
      {
        "title": "AudioMixer",
        "label": "controls",
        "width": 500,
        "height": 250,
        "visible": false,
        "closable": false,
        "transparent": true,
        "decorations": false,
        "hiddenTitle": true,
        "center": true,
        "focus": true,
        "theme": "Dark",
        "alwaysOnTop": true,
        "resizable": false,
        "url": "controls.html"
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "audio-mixer",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}